<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="80dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <!-- Sender Name (Above CardView) -->
    <TextView
        android:id="@+id/tvSenderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sender Name"
        android:textColor="@color/primary_purple"
        android:textSize="13sp"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cvFile"
        tools:ignore="HardcodedText" />

    <!-- Avatar (hidden for private chat, shown for group) -->
    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_profile"
        android:contentDescription="@string/app_name"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cvFile"
        tools:visibility="gone" />

    <!-- File Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvFile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="@color/message_received"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSenderName">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- File Icon -->
            <ImageView
                android:id="@+id/ivFileIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_file"
                android:contentDescription="@string/file"
                android:padding="8dp"
                android:background="@drawable/bg_rounded_dark"
                app:tint="@color/primary_purple" />

            <!-- File Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Document.pdf"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_semibold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvFileSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="12 MB"
                    android:textColor="@color/text_tertiary"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_regular"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvFileTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="12:30 PM"
                    android:textColor="@color/text_tertiary"
                    android:textSize="11sp"
                    android:fontFamily="@font/inter_regular"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Download Button -->
            <ImageView
                android:id="@+id/ivDownload"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_download"
                android:contentDescription="@string/download"
                android:layout_marginStart="8dp"
                app:tint="@color/primary_purple" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
